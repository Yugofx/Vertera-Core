{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended",
    "tslint-config-prettier"
  ],
  "rulesDirectory": [
    "tslint-plugin-prettier"
  ],
  "rules": {
    "prettier": [
      true,
      {
        "singleQuote": true,
        "trailingComma": "all",
        "bracketSpacing": true,
        "printWidth": 140
      }
    ],
    "callable-types": true,
    "class-name": true,
    "max-classes-per-file": [false],
    "comment-format": [
      true,
      "check-space"
    ],
    "curly": true,
    "deprecation": {
      "severity": "warn"
    },
    "eofline": true,
    "forin": false,
    "import-blacklist": [
      true,
      "rxjs/Rx"
    ],
    "interface-over-type-literal": true,
    "import-spacing": true,
    "label-position": true,
    "max-line-length": [
      true,
      150
    ],
    "member-access": false,
    "member-ordering": [
      false
    ],
    "ordered-imports": false,
    "no-console": [
      true,
      "debug",
      "info",
      "time",
      "timeEnd",
      "trace"
    ],
    "no-construct": true,
    "no-debugger": false,
    "no-duplicate-super": true,
    "no-empty": false,
    "no-empty-interface": true,
    "no-eval": true,
    "no-inferrable-types": [
      true,
      "ignore-params"
    ],
    "no-misused-new": true,
    "no-shadowed-variable": true,
    "no-string-throw": true,
    "no-unused-expression": false,
    "no-use-before-declare": true,
    "no-var-keyword": true,
    "object-literal-sort-keys": false,
    "prefer-const": true,
    "radix": false,
    "semicolon": [
      true,
      "always"
    ],
    "unified-signatures": true,
    "variable-name": false
  }
}
